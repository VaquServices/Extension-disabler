{
    "manifest_version": 2,
    "name": "V Extension Manager",
    "version": "1.0.0",
    "description": "Automatically enables and disables extensions for specified sites.",    
    "icons": {
      "16"  : "icon16.png",
      "48"  : "icon48.png",
      "128" : "icon128.png"
    },
    "browser_action": {
        "default_icon"  : "icon16.png",
        "default_popup" : "popup.html",
        "default_title" : "V Extension Manager"
    },
    "background": {"scripts": ["background.js"]},   
    "options_page": "options.html",
    "permissions": ["management", "tabs"]
}
